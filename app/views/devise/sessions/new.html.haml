.span6.offset2
  .well.well-large
    = form_for(resource, :as => resource_name, :html => { :class => "form-horizontal"}, :url => session_path(resource_name) ) do |f|
      %legend Sign In
      .control-group
        = f.label :email, "Email", class: 'control-label'
        .controls
          = f.email_field :email, class: 'input-large', placeholder: "Email"
      .control-group
        = f.label :password, "Password", class: 'control-label'
        .controls
          = f.password_field :password, class: 'input-large', placeholder: "Password"
      - if devise_mapping.rememberable?
        .control-group
          .controls
            %label.checkbox
              = f.check_box :remember_me
              Remember me
      .control-group
        .controls
          = f.submit "Sign in", class: 'btn btn-primary'
      .control-group
        .controls
          = render "devise/shared/links"
