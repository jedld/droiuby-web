%h1= "Resources for #{@app.name}"
= link_to "Add Resource", new_resource_path(@app),  class: 'btn'
%table.table
  %thead
    %th
      Name
    %th
      Resource Type
    %th
      Manage
  - @app.resources.each do |r|
    %tr
      %td
        = r.name
      %td
        = r.resource_type_name
      %td= link_to('Edit', edit_resource_path(r), class: 'btn btn-primary')


